<% include partials/header %>

<div class="ui main text container segment">
    <div class ="ui huge header"> <h1> <%= blog.title %></h1> </div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image %>" class="ui centered round image">
            <div class="content">
                <span> <strong> <%= blog.created.toDateString() %> </strong></span>
            </div>
            <div class="descripton">
                <p> <%- blog.body %></p>
            </div>
            <a class="ui basic orange big button" href="/blog/<%= blog._id%>/edit">Edit</a>
            <form id="delete" action="/blog/<%= blog._id%>?_method=DELETE" method="post">
                <button class="ui basic red big button"> Delete </button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>