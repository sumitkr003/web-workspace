<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center "> Edit comment </h1>
        <div style="width:30%; margin:25px auto; ">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary"> Edit Comment </button>
                </div>
            </form>
            <button class="btn btn-lg btn-default btn-block"><a href="/campgrounds"> view all campgrounds </a> </button>
        </div>

    </div>
</div>

